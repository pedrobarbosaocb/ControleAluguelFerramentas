@model ProvaTecnica_ControleAlugueis.Models.Ferramenta

@{
    ViewData["Title"] = "Adicionar";
}

<h1>Adicionar</h1>

<h4>Ferramenta</h4>
<hr />
<div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-4">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome da ferramenta"/>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-8">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" placeholder="Digite uma breve descrição"/>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </div>
            <div class="row" style="padding-bottom:10px;">
                <div class="col-3">
                    <label asp-for="EstMax" class="control-label"></label>
                    <input asp-for="EstMax" class="form-control" placeholder="Ex.: 500"/>
                    <span asp-validation-for="EstMax" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <label asp-for="EstMin" class="control-label"></label>
                    <input asp-for="EstMin" class="form-control" placeholder="Ex.: 10"/>
                    <span asp-validation-for="EstMin" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <label asp-for="EstAtu" class="control-label"></label>
                    <input asp-for="EstAtu" class="form-control" placeholder="Ex.: 350"/>
                    <span asp-validation-for="EstAtu" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <label asp-for="PrecoDiaria" class="control-label"></label>
                    <input asp-for="PrecoDiaria" class="form-control" placeholder="Ex.: 12.50"/>
                    <span asp-validation-for="PrecoDiaria" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
